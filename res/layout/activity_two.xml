<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/two_b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/two_b1" />

    <Button
        android:id="@+id/two_b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/two_b1"
        android:text="@string/two_b2" />

    <Button
        android:id="@+id/two_b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/two_b2"
        android:text="@string/two_b3" />

    <Button
        android:id="@+id/two_b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/two_b3"
        android:text="@string/two_b4" />

</RelativeLayout>